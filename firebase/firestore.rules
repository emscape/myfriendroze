rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /products/{productId} {
      allow read: if request.auth != null;
      allow write: if request.auth.token.email == 'roze@email.com';
    }
    match /events/{eventId} {
      allow read: if request.auth != null;
      allow write: if request.auth.token.email == 'roze@email.com';
    }
  }
}
